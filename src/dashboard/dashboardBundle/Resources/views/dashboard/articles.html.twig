{% extends "dashboarddashboardBundle::base.html.twig" %}

{% block body %}
    <div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Dashboard</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <h1>Articles</h1>
        <button>Ajouter</button>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>

                    <th>titre</th>
                    <th>auteur</th>
                    <th>status</th>

                </tr>
                </thead>
                <tbody>

                {% for post in posts %}

                <tr>


                    <td>{{ post.titre }}</td>
                      <td>{{ post.auteur }}</td>
                    <td></td>



                    {% endfor %}
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}